<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ValorantClutchGuide"
        tools:targetApi="31">
        <activity
            android:name=".ContentScreen"
            android:exported="false"
            android:label="@string/title_activity_content_screen"
            android:theme="@style/Theme.ValorantClutchGuide" />
        <activity
            android:name=".AgentScreen"
            android:exported="false"
            android:label="@string/title_activity_agent_screen"
            android:theme="@style/Theme.ValorantClutchGuide" />
        <activity
            android:name=".DefenseScreen"
            android:exported="false"
            android:label="@string/title_activity_defence_screen"
            android:theme="@style/Theme.ValorantClutchGuide" />
        <activity
            android:name=".AttackScreen"
            android:exported="false"
            android:label="@string/title_activity_attack_screen"
            android:theme="@style/Theme.ValorantClutchGuide" />
        <activity
            android:name=".SideScreen"
            android:exported="false"
            android:label="@string/title_activity_team_screen"
            android:theme="@style/Theme.ValorantClutchGuide" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ValorantClutchGuide">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>